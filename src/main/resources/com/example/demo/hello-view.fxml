<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Canvas fx:id="canvas" width="920" height="400"/>

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Выбор фигуры:"/>
            <Button onAction="#onCircleClicked" text="Круг"/>
            <Button onAction="#onTriangleClicked" text="Треугольник"/>
            <Button onAction="#onRectangleClicked" text="Прямоугольник"/>
        </VBox>

        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Выбор цвета:"/>
            <ColorPicker fx:id="colorPicker" onAction="#onColorChanged"/>
        </VBox>
    </HBox>
</VBox>